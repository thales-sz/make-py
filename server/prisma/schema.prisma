generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  first_name String
  last_name String
  email String @unique
  role String @default("USER")
  password String

  @@map("users")
}

model Product {
  id String @id @default(uuid())
  price Decimal
  name String @unique
  description String
  stock_quantity Int
  created_at DateTime @default(now())

  @@map("products")
}
